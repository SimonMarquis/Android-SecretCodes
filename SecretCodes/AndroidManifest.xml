<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.simon.marquis.secretcodes"
    android:versionCode="8"
    android:versionName="1.3.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="fr.simon.marquis.secretcodes.ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="fr.simon.marquis.secretcodes.service.CrawlerService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <provider
            android:name="fr.simon.marquis.secretcodes.util.ExportContentProvider"
            android:authorities="fr.simon.marquis.secretcodes.data"
            android:enabled="true"
            android:exported="true" >
        </provider>
    </application>

</manifest>